    }
    .filters a:hover {
      background: #0056b3;
    }
    .list {
      padding: 1rem;
    }
    .card {
      border: 1px solid #ccc;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
    }
    .card h3 {
      margin-top: 0;
    }
    .tag {
      display: inline-block;
      margin-right: 0.5rem;
      background: #eee;
      padding: 0.2rem 0.5rem;
      border-radius: 4px;
    }
  </style>
