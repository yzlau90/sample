<body>
    <title>Where are the Best Hokkien Mee?</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      display: flex;
    }

    #sidebar {
      width: 250px;
      height: 100vh;
      background: #f8f9fa;
      border-right: 1px solid #ddd;
      overflow-y: auto;
      padding: 10px;
    }

    #sidebar h2 {
      margin-top: 0;
    }

    .bookmark-item {
      padding: 8px;
      margin-bottom: 5px;
      background: #ffffff;
      border: 1px solid #ccc;
      border-radius: 6px;
      cursor: pointer;
    }

    .bookmark-item:hover {
      background: #e9ecef;
    }

    #map {
      flex: 1;
      height: 100vh;
    }
  </style>
</head>
<body>

<div id="sidebar">
  <h2>All of the Best Hokkien Mee</h2>
  <div id="bookmarkList">No bookmarks yet</div>
</div>

<div id="map"></div>
    <main class="container">
        <!-- Navbar which can be reused across other pages -->
        <%- include('../partials/navbar'); %>

        <!-- Information welcoming visitors to my page -->
        <div class="welcome-container">
            <h1>Welcome to my blog</h1>
            <h2>Learn about what happened in my day!</h2>
        </div>

        <div class="new-post-btn-container">
           <a href="/new" class="button" role="button">+ New Post</a>
        </div>

        <!-- Show blog posts -->
        <% blogs.forEach(post => { %>
            <article class="post-container">
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
                <form action="/delete/<%= post.id %>" method="post" onsubmit="return confirm('Do you really want to delete this post?');">
                    <button class="outline primary" type="submit">Delete</button>
                </form>
            </article>
        <% }); %>
    </main>
</body>
</html>