  <title>Best of Hokkien Mee Map</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
  <style>
    body {
      margin: 0;
      font-family: sans-serif;
    }
    #map {
      height: 80vh;
    }
    .filters {
      display: flex;
      gap: 1rem;
      padding: 1rem;
      background: #f8f8f8;
      border-bottom: 1px solid #ccc;
    }
    .filters a {
      padding: 0.5rem 1rem;
      background: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
    .filters a:hover {
      background: #0056b3;
    }
  </style>
</head>
<body>
  <div class="filters">
    <a href="filter.html?tag=wet">Wet</a>
    <a href="filter.html?tag=dry">Dry</a>
    <a href="filter.html?tag=sambal">Sambal</a>
    <a href="filter.html?tag=cut chilli">Cut Chilli</a>
    <a href="filter.html?tag=wok hei">Wok Hei</a>
  </div>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    const locations = [
      {
        name: "ABC Hawker",
        lat: 1.3521,
        lng: 103.8198,
        categories: ["wet", "sambal", "wok hei"],
        googleReviewLink: "https://www.google.com/maps/place/ABC+Hawker"
      },
      {
        name: "XYZ Food Court",
        lat: 1.3000,
        lng: 103.8000,
        categories: ["dry", "cut chilli"],
        googleReviewLink: "https://www.google.com/maps/place/XYZ+Food+Court"
      }
      // Add more...
    ];

    const map = L.map('map').setView([1.3521, 103.8198], 12);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    locations.forEach(loc => {
      const marker = L.marker([loc.lat, loc.lng]).addTo(map);
      marker.bindPopup(`<b>${loc.name}</b><br><a href="${loc.googleReviewLink}" target="_blank">View Reviews</a>`);
    });
  </script>
</body>
